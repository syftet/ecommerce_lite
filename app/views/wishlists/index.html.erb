<% content_for :breadcrumb do %>
    <%= render 'shared/breadscrumb', breadscrumb: generate_breadscrumb('Wishlist') %>
<% end %>

<section id="main" class="site-main">
  <section id="main-container" class=" inner">
    <div id="main-content" class="main-content col-xs-12">
      <div id="primary" class="content-area">
        <div id="content" class="site-content" role="main">

          <h1 class="public-title text-left">Wishlist</h1>

          <article id="wishlists" class="post-143 page type-page status-publish hentry">
            <div class="entry-content-page">
              <div class="clearfix mb20">
                <div class="product-listing row clearfix">
                  <% @wishlists.each do |wishlist| %>
                      <% if wishlist.product.present? %>
                          <div class="col-md-6" id="wishlist-<%= wishlist.id %>">
                            <div class="product-remove">
                              <%= link_to 'x', wishlist_path(wishlist), method: :delete, confirm: 'Are you sure?', remote: true, class: 'remove remove_from_wishlist' %>
                            </div>
                            <%= render 'wishlists/product_list', wishlist: wishlist %>
                          </div>
                      <% end %>
                  <% end %>
                  <% unless @wishlists.present? %>
                    <div class="alert alert-warning">
                      No wishlisted product found.
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>
</section>