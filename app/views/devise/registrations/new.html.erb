<div class="mt20">
  <%= devise_error_messages! %>
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-6">
        <div class="signup-wrapper row">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <p class="lead">Create New Account!</p>

              <div class="form-group">
                <%= f.label :name %><br/>
                <%= f.text_field :name, autofocus: true, class: 'required custom-form-control form-control reset-border-radius', required: true %>
              </div>

              <div class="form-group">
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true, class: 'required custom-form-control form-control reset-border-radius' %>
              </div>


              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br/>
                <%= f.password_field :password, autocomplete: "off", class: 'required custom-form-control form-control reset-border-radius' %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br/>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'required custom-form-control form-control reset-border-radius' %>
              </div>

              <div class="actions">
                <%= f.submit "Sign up", class: 'btn-primo-thin' %>
              </div>
          <% end %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="signin-wrapper sign-in-wrap row">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login-form', remote: true) do |f| %>

              <p class="lead">Hello, Welcome Back!</p>

              <div class="form-group">
                <%= f.email_field :email, autofocus: true, class: 'required custom-form-control form-control reset-border-radius', placeholder: 'Username' %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: 'password required custom-form-control form-control reset-border-radius', placeholder: 'Password' %>
              </div>

              <div class="form-group">
                <label for="remember_me">
                  <%= f.check_box :remember_me, id: 'remember_me' %>
                  Remember Me
                </label>

                <div class="form-group others-link">
                  <a href="#forgot-password-form" class="toggle-links login-forgot-password" title="Forgot Password">
                    Lost Your Password?
                  </a>
                </div>
              </div>

              <div class="form-group">
                <%= f.submit 'Log In', class: 'btn-primo-thin' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%#= render "users/shared/links" %>
<script type="text/javascript">
    $(document).on('turbolinks:load', function () {
        $(function () {
            $('.login-forgot-password').click(function () {
                $('#modalLoginForm').modal();
                $('#opalloginform').addClass('hidden');
            });
        });
    });
</script>