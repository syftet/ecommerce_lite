<% if payment.source %>
    <fieldset data-hook="credit_card">
      <legend><%= t(:credit_card) %></legend>
      <table class="table table-condensed table-bordered">
        <tr>
          <th width="20%"><%= t(:token) %>:</th>
          <td><%= payment.source.token %></td>
        </tr>
        <tr>
          <th><%= t(:profile_id) %>:</th>
          <td><%= payment.source.payer_id %></td>
        </tr>
        <tr>
          <th><%= t(:type) %>:</th>
          <td>
            PayPal Express
          </td>
        </tr>
        <tr>
          <th><%= t(:created_at) %>:</th>
          <td><%= payment.source.created_at.strftime('%B %d, %Y') %></td>
        </tr>
      </table>
    </fieldset>
<% end %>