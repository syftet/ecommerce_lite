<% if variants.any? %>
  <table class="table">
    <thead>
    <tr>
      <th>Code</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% variants.each do |variant| %>
      <tr>
        <td><%= link_to variant.code, admin_product_variant_path(@product, variant) %></td>
        <td><%= variant.is_active ? 'Active' : 'Inactive' %></td>
        <td><%= link_to 'Show', admin_product_variant_path(@product, variant) %></td>
        <td><%= link_to 'Edit', edit_admin_product_variant_path(@product, variant) %></td>
        <td><%= link_to 'Destroy', admin_product_variant_path(@product, variant), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= t(:no_resource_found, resource: 'Variants') %>,
    <%= link_to t(:add_one), new_admin_product_variant_path(@product) %>!
  </div>
<% end %>
