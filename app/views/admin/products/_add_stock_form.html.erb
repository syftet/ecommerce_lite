<div class="panel-heading">
  <h1 class="panel-title">
    <%= t(:add_stock) %>
  </h1>
</div>
<div class="panel-body">
  <%= form_for [:admin, StockMovement.new], url: admin_stock_items_path do |f| %>
    <div data-hook="admin_stock_movements_form_fields" class="row">
      <div class="col-md-2">
        <div class="form-group">
          <%= f.field_container :quantity do %>
            <%= f.label :quantity, t(:quantity) %>
            <%= f.number_field :quantity, class: 'form-control', value: 1 %>
          <% end %>
        </div>
      </div>
      <div class="col-md-5">
        <div class="form-group">
          <%= f.field_container :stock_location do %>
            <%= label_tag :stock_location_id, t(:stock_location) %>
            <%= select_tag 'stock_location_id', options_from_collection_for_select(@stock_locations, :id, :name), class: 'form-control', id: :product_stock_location_select %>
          <% end %>
        </div>
      </div>

      <div class="col-md-5">
        <div class="form-group">
          <%= f.field_container :product_id do %>
            <%= label_tag 'product_id', t(:product) %>
            <%= select_tag 'product_id', options_from_collection_for_select(@products, :id, :code), class: 'form-control', id: :product_code_select %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="form-actions text-center" data-hook="buttons">
      <%= button t(:add_stock), 'plus' %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#product_stock_location_select').select2();
        $('#product_code_select').select2();
    });
</script>
