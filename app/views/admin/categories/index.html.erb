<% content_for :page_title do %>
  Product Categories
<% end %>

<% content_for :page_actions do %>
  <%= link_to new_admin_category_path, class: 'btn btn-success' do %>
    <i class="fa fa-plus" aria-hidden="true"></i> New Category
  <% end %>
<% end if can?(:create, Admin::Category) %>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Permalink</th>
    <th>Meta title</th>
    <th>Meta desc</th>
    <th>Keywords</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @admin_categories.each do |admin_category| %>
      <tr>
        <td><%= admin_category.name %></td>
        <td><%= admin_category.description %></td>
        <td><%= admin_category.permalink %></td>
        <td><%= admin_category.meta_title %></td>
        <td><%= admin_category.meta_desc %></td>
        <td><%= admin_category.keywords %></td>
        <td><%= link_to 'Show', admin_category %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(admin_category) %></td>
        <td><%= link_to 'Destroy', admin_category, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
