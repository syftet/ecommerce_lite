<% content_for :page_title do %>
  <%= link_to t(:stock_locations), admin_stock_locations_path %> /
  <%= link_to @stock_location.name, admin_stock_location_path(@stock_location) %> /
  <%= link_to t(:stock_movements), admin_stock_location_stock_movements_path(@stock_location) %> /
  <%= t(:edit_stock_movement) %>
<% end %>

<%= render partial: 'admin/shared/error_messages', locals: { target: @stock_movement } %>

<%= form_for [:admin, @stock_location, @stock_movement] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'admin/shared/edit_resource_links', locals: { collection_url: admin_stock_location_stock_movements_path(@stock_location) } %>
  </fieldset>
<% end %>
