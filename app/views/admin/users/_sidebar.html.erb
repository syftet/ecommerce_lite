<% content_for :page_title do %>
    <%= link_to t(:users), admin_users_path %> /
<% end %>

<% content_for :sidebar do %>
    <ul class="nav nav-pills nav-stacked" data-hook="admin_user_tab_options">
      <li<%== ' class="active"' if current == :account %>>
        <%= link_to_with_icon 'user', t(:"admin.user.account"), edit_admin_user_path(@user) %>
      </li>
      <li<%== ' class="active"' if current == :address %>>
        <%= link_to_with_icon 'address-book-o', t(:"admin.user.addresses"), addresses_admin_user_path(@user) %>
      </li>
      <li<%== ' class="active"' if current == :orders %>>
        <%= link_to_with_icon 'shopping-cart', 'Orders', orders_admin_user_path(@user) %>
      </li>
    </ul>
<% end %>
