<div data-hook="admin_user_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
        <%= f.label :email, t(:name) %>
        <%= f.text_field :name, :class => 'form-control' %>
        <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :email, class: ['form-group'] do %>
        <%= f.label :email, t(:email) %>
        <%= f.email_field :email, :class => 'form-control' %>
        <%= f.error_message_on :email %>
    <% end %>

    <%#= f.field_container :user_type, class: ['form-group'] do %>
    <%#= f.label :email, t(:user_type) %>
    <%#= f.select :user_type, options_for_select(AppSettings::USER_TYPE.collect { |key, value| [value, key] }, f.object.user_type), {}, {class: 'form-control'} %>
    <%#= f.error_message_on :user_type %>
    <%# end %>
  </div>

  <div class="col-md-6">
    <%= f.field_container :password, class: ['form-group'] do %>
        <%= f.label :password, t(:password) %>
        <%= f.password_field :password, :class => 'form-control' %>
        <%= f.error_message_on :password %>
    <% end %>

    <%= f.field_container :password_confirmation, class: ['form-group'] do %>
        <%= f.label :password_confirmation, t(:confirm_password) %>
        <%= f.password_field :password_confirmation, :class => 'form-control' %>
        <%= f.error_message_on :password_confirmation %>
    <% end %>
  </div>

  <div class="col-sm-12">
    <div data-hook="admin_user_form_roles" class="form-group">
      <div class="form-group">
        <strong> Role </strong>
      </div>
      <% User::ROLES.each do |role| %>
          <label>
            <%= f.radio_button :role, role %> <%= role.camelize %>
          </label>
      <% end %>
    </div>
  </div>
</div>
